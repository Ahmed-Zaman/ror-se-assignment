<div class="container">
  <h1 class="mt-4 mb-3"><%= @blog.title %></h1>
  <div class="card">
    <div class="card-body">
      <p class="card-text"><%= @blog.body %></p>
    </div>
  </div>

  <div class="mt-3">
    <%= link_to "Edit", edit_blog_path(@blog), class: "btn btn-primary" %>
    <%= link_to "Back", blogs_path, class: "btn btn-secondary" %>
  </div>
</div>
