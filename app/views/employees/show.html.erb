<div class="container">
  <div class="card mt-3">
    <div class="card-header">
      <h1>Employee Details</h1>
    </div>
    <div class="card-body">
      <div class="mb-3">
        <strong>Name:</strong>
        <%= @employee["name"] %>
      </div>

      <div class="mb-3">
        <strong>Position:</strong>
        <%= @employee["position"] %>
      </div>

      <div class="mb-3">
        <strong>Salary:</strong>
        <%= @employee["salary"] %>
      </div>

      <div class="mb-3">
        <strong>Date of Birth:</strong>
        <%= @employee["date_of_birth"] %>
      </div>
    </div>
  </div>

  <div class="mt-3">
    <%= link_to 'Edit Employee', edit_employee_path(@employee["id"]), class: 'btn btn-primary' %>
    <%= link_to 'Back to Employees', employees_path, class: 'btn btn-secondary' %>
  </div>
</div>